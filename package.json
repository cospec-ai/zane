{
  "name": "zane",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bunx --bun vite build",
    "preview": "bunx --bun vite preview --port 4173",
    "deploy": "bun run build && bunx wrangler pages deploy dist --project-name zane --branch main",
    "migrate": "bunx wrangler d1 migrations apply zane --remote",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,svelte}": [
      "oxlint --fix"
    ]
  },
  "dependencies": {
    "@fontsource/geist-mono": "^5.2.7",
    "@pierre/diffs": "^1.0.6",
    "@simplewebauthn/browser": "^11.0.0",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "sv-router": "^0.13.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "oxlint": "^1.50.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
